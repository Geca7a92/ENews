@using ENews.Common
@model ENews.Web.ViewModels.ArticlePreviewViewModel

<div class="topic">
    <div>
        @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
        {
            <form asp-area="Administration" asp-controller="Home" asp-action="Delete">
                <input type="hidden" asp-for="@Model.Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        }
    </div>
    <div class="topic-information">
        <a asp-controller="Articles" asp-action="Index" asp-route-id="@Model.Id">
            <img src="@Model.PictureImageUrl" class="img-fluid" height="100" width="177" />
            <h4>
                @Model.PreviewTitle - C(@Model.CategoryTitle) SubC(@Model.SubCategoryTitle)
            </h4>
        </a>
        <p class="text">
            @Model.ContetPreview
        </p>
    </div>
    <div>
        <p align="right">
            @Model.AuthorFullName
        </p>
        <p align="right">
            @Model.CreatedOn
        </p>
    </div>
</div>