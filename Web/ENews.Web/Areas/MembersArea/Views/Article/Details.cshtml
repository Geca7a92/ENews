</div>
<div>
    <ul>
        <li>
            <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        </li>
        @if (this.Model.IsDeleted)
        {
            <li>
                <a asp-action="Deleted">Back to list</a>
            </li>
        }
        else
        {
            <li>
                <a asp-action="Active">Back to list</a>
            </li>
            <li>
                <a asp-area="" asp-controller="Articles" asp-action="Index" asp-route-id="@Model.Id">To Article!</a>
            </li>
        }
    </ul>

</div>
