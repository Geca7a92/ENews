@model ENews.Web.ViewModels.Articles.ArticleCreateInputModel
@{ 
    this.ViewData["Title"] = "Create article";
}

<h1>@this.ViewData["Title"]</h1>

<form method="post" asp-area="MembersArea" asp-controller="Article" asp-action="Create">
    <input asp-for="Title"/>
    <input asp-for="Content"/>
    <input asp-for="CategoryId"/>
    <input asp-for="SubCategoryId"/>
    <input asp-for="ImageId"/>
    <input type="submit" class="btn btn-primary" />
</form>