@*@model IEnumerable<ENews.Data.Models.Category>*@
@model ENews.Web.ViewModels.Administration.SubCategories.IndexSubCategoriesViewModel

@{
    ViewData["Title"] = "Deleted subcategories";
}

<div class="alert alert-danger" role="alert">
    <div class="text-center">
        @ViewData["Title"] list
    </div>
</div>
<div class="card">
    <div class="card-header">
        <ul class="nav nav-tabs">
            <li class="nav-item active">
                <a class="nav-link" asp-area="Administration" asp-controller="SubCategories" asp-action="Active">Active subcategries</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="">@ViewData["Title"]</a>
            </li>
            <li class=" flex-grow-1"></li>
            <li class="nav-item">
                <a class="nav-link" asp-area="Administration" asp-controller="SubCategories" asp-action="Create">Create New</a>
            </li>
        </ul>
    </div>
    <table class="table table-responsive-lg">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(Model => Model.SubCategories.FirstOrDefault().Title)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.SubCategories.FirstOrDefault().CategoryTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.SubCategories.FirstOrDefault().DeletedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.SubCategories.FirstOrDefault().CreatedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.SubCategories.FirstOrDefault().ModifiedOn)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.SubCategories)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeletedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedOn)
                    </td>
                    <td>
                        <ul>
                            <li>
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                            </li>
                            <li>
                                <a asp-action="Undelete" asp-route-id="@item.Id">Restore</a>
                            </li>
                            <li>
                                <a asp-action="HardDelete" asp-route-id="@item.Id">Hard Delete</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<nav aria-label="Page navigation example" class="center">
    <ul class="pagination mt-50 justify-content-center">

        @*First page*@
        @if (this.Model.CurrentPage != 1)
        {
            <li class="page-item">
                <a class="page-link" asp-area="Administration" asp-controller="SubCategories" asp-action="Deleted" asp-route-page="1">1</a>
            </li>
        }
        @*Pages before current page*@
        @for (int i = this.Model.CurrentPage - 2; i < this.Model.CurrentPage; i++)
        {
            @if (i > 1)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-area="Administration" asp-controller="SubCategories" asp-action="Deleted"
                       asp-route-page="@i">@i</a>
                </li>
            }
        }
        @*Current page*@
        @{
            <li class="page-item active">
                <a class="page-link"
                   asp-area="Administration" asp-controller="SubCategories" asp-action="Deleted"
                   asp-route-page="@this.Model.CurrentPage">@this.Model.CurrentPage</a>
            </li>
        }
        @*Pages after current page*@
        @for (int i = this.Model.CurrentPage + 1; i <= this.Model.CurrentPage + 2; i++)
        {
            @if (i < this.Model.PagesCount)
            {

                <li class="page-item">
                    <a class="page-link"
                       asp-area="Administration" asp-controller="SubCategories" asp-action="Deleted"
                       asp-route-page="@i">@i</a>
                </li>
            }
        }
        @*Last page*@
        @if (this.Model.CurrentPage != this.Model.PagesCount)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-area="Administration" asp-controller="SubCategories" asp-action="Deleted"
                   asp-route-page="@(this.Model.PagesCount)">@this.Model.PagesCount</a>
            </li>
        }
    </ul>
</nav>