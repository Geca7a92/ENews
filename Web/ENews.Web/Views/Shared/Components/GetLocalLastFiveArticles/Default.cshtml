@model ENews.Web.ViewModels.Shared.Components.GetLocalLastFiveArticles.LocalLastFiveArticlesViewModel

<div class="card">
    <div class="card-header">
        @if (Model.Region != null)
        {
            <h3>News from @Model.Region.Value</h3>
        }
        else
        {
            <h3>News from Bulgaria</h3>
        }
    </div>
    <div class="card-body">
        @foreach (var article in Model.Articles)
        {
            @await Html.PartialAsync("_ArticlePartial", article)
        }
    </div>
</div>