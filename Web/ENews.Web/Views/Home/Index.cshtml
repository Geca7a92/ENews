@model ENews.Web.ViewModels.Home.IndexViewModel

@using ENews.Common
@{
    this.ViewData["Title"] = "Home Page";
}

<!-- ##### Hero Area Start ##### -->
<div class="hero-area">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-12 col-lg-8">
                <!-- Latest News Widget -->
                <div class="breaking-news-area d-flex align-items-center">
                    <div class="news-title">
                        <p>Latest News</p>
                    </div>
                    <div id="breakingNewsTicker" class="ticker">
                        <vc:latest-headlines></vc:latest-headlines>
                    </div>
                </div>
                <!-- Latest News Widget -->
                <div class="breaking-news-area d-flex align-items-center mt-15">
                    <div class="news-title title2">
                        <p>International</p>
                    </div>
                    <div id="internationalTicker" class="ticker">
                        <vc:latest-international-headlines></vc:latest-international-headlines>
                    </div>
                </div>
            </div>

            <!-- Hero Add -->
            <div class="col-12 col-lg-4">
                <div class="hero-add">
                    <a href="https://www.google.com/" target="_blank"><img src="img/bg-img/hero-add.gif" alt=""></a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ##### Hero Area End ##### -->
<!-- ##### Featured Post Area Start ##### -->
<div class="featured-post-area">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-6 col-lg-8">
                <div class="row">
                    <!-- Single Featured Post -->
                    <div class="col-12 col-lg-7">
                        <div class="single-blog-post featured-post">
                            <div class="post-thumb">
                                <a asp-area="" asp-controller="Articles" asp-action="Index" asp-route-id="@Model.LatestArticle.Id"><img src="@Model.LatestArticle.PictureImageUrl" alt=""></a>
                            </div>
                            <div class="post-data">
                                <a asp-area="" asp-controller="Categories" asp-action="Index" asp-route-name="@Model.LatestArticle.CategoryTitle" class="post-catagory">@Model.LatestArticle.CategoryTitle</a>
                                <a asp-area="" asp-controller="Articles" asp-action="Index" asp-route-id="@Model.LatestArticle.Id" class="post-title">
                                    <h6>@Model.LatestArticle.Title</h6>
                                </a>
                                <div class="post-meta">
                                    <p class="post-author">
                                        By <a href="#">
                                            @if (Model.LatestArticle.AuthorFirstName == null)
                                            {
                                                @Model.LatestArticle.AuthorUserName
                                            }
                                            else
                                            {
                                                @Model.LatestArticle.AuthorFullName
                                            }
                                        </a>
                                    </p>
                                    <p class="post-excerp">@Model.LatestArticle.ContetPreview</p>
                                    <!-- Post Like & Post Comment -->
                                    <div class="d-flex align-items-center">
                                        <a asp-area="" asp-controller="Articles" asp-action="Index" asp-route-id="@Model.LatestArticle.Id" class="post-like"><i class="fa fa-eye text-muted fsize-3"></i> <span>@Model.LatestArticle.SeenCount</span></a>
                                        <a asp-area="" asp-controller="Articles" asp-action="Index" asp-route-id="@Model.LatestArticle.Id" class="post-comment"><img src="img/core-img/chat.png" alt=""> <span>@Model.LatestArticle.CommentsCount</span></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-12 col-lg-5">
                        <!-- Single Featured Post -->
                        @foreach (var item in Model.LatestTwoArticles)
                        {
                            <div class="single-blog-post featured-post-2">
                                <div class="post-thumb">
                                    <a asp-area="" asp-controller="Articles" asp-action="Index" asp-route-id="@item.Id"><img src="@item.PictureImageUrl" alt=""></a>
                                </div>
                                <div class="post-data">
                                    <a asp-area="" asp-controller="Categories" asp-action="Index" asp-route-name="@item.CategoryTitle" class="post-catagory">@item.CategoryTitle</a>
                                    <div class="post-meta">
                                        <a asp-area="" asp-controller="Articles" asp-action="Index" asp-route-id="@item.Id" class="post-title">
                                            <h6>@item.Title</h6>
                                        </a>
                                        <!-- Post Like & Post Comment -->
                                        <div class="d-flex align-items-center">
                                            <a asp-area="" asp-controller="Articles" asp-action="Index" asp-route-id="@item.Id" class="post-like"><i class="fa fa-eye text-muted fsize-3"></i> <span>@item.SeenCount</span></a>
                                            <a asp-area="" asp-controller="Articles" asp-action="Index" asp-route-id="@item.Id" class="post-comment"><img src="img/core-img/chat.png" alt=""> <span>@item.CommentsCount</span></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-6 col-lg-4">
                <!-- Single Featured Post -->

                @foreach (var item in Model.LatestFiveArticles)
                {

                    <div class="single-blog-post small-featured-post d-flex">
                        <div class="post-thumb">
                            <a asp-area="" asp-controller="Articles" asp-action="Index" asp-route-id="@item.Id"><img src="@item.PictureImageUrl" alt=""></a>
                        </div>
                        <div class="post-data">
                            <a asp-area="" asp-controller="Categories" asp-action="Index" asp-route-name="@item.CategoryTitle" class="post-catagory">@item.CategoryTitle</a>
                            <div class="post-meta">
                                <a asp-area="" asp-controller="Articles" asp-action="Index" asp-route-id="@item.Id" class="post-title">
                                    <h6>@item.Title</h6>
                                </a>
                                <p class="post-date"><span>@item.CreatedOn.ToString("h:mm tt")</span> | <span>@item.CreatedOn.ToString("MMMM dd")</span></p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- ##### Featured Post Area End ##### -->
<!-- ##### Popular News Area Start ##### -->
<div class="popular-news-area section-padding-80-50">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-8">
                <div class="section-heading">
                    <h6>Popular News</h6>
                </div>

                <div class="row">

                    <!-- Single Post -->

                    @foreach (var item in Model.LatestPopularNews)
                    {

                        <div class="col-12 col-md-6">
                            <div class="single-blog-post style-3">
                                <div class="post-thumb">
                                    <a asp-area="" asp-controller="Articles" asp-action="Index" asp-route-id="@item.Id"><img src="@item.PictureImageUrl" alt=""></a>
                                </div>
                                <div class="post-data">
                                    <a asp-area="" asp-controller="Categories" asp-action="Index" asp-route-name="@item.CategoryTitle" class="post-catagory">@item.CategoryTitle</a>
                                    <a asp-area="" asp-controller="Articles" asp-action="Index" asp-route-id="@item.Id" class="post-title">
                                        <h6>@item.Title</h6>
                                    </a>
                                    <div class="post-meta d-flex align-items-center">
                                        <a asp-area="" asp-controller="Articles" asp-action="Index" asp-route-id="@item.Id" class="post-like"><i class="fa fa-eye text-muted fsize-3"></i><span>@item.SeenCount</span></a>
                                        <a asp-area="" asp-controller="Articles" asp-action="Index" asp-route-id="@item.Id" class="post-comment"><img src="img/core-img/chat.png" alt=""> <span>@item.CommentsCount</span></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>

            <div class="col-12 col-lg-4">
                <div class="section-heading">
                    <h6>Info</h6>
                </div>
                <!-- Popular News Widget -->
                <div class="popular-news-widget mb-30">
                    <h3> Most Commented News</h3>

                    <!-- Single Popular Blog -->

                    @foreach (var item in Model.MostCommentedNewsLastWeek)
                    {
                        <div class="single-popular-post">
                            <a asp-area="" asp-controller="Articles" asp-action="Index" asp-route-id="@item.Id">
                                <h6> @item.ContetPreview</h6>
                            </a>
                            <p>@item.CreatedOn.ToString("MMMM dd")</p>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>
<!-- ##### Popular News Area End ##### -->
<!-- ##### Video Post Area Start ##### -->
<div class="video-post-area bg-img bg-overlay" style="background-image: url(img/bg-img/bg1.jpg);">
    <div class="container">
        <div class="row justify-content-center">
            <!-- Single Video Post -->
            <div class="col-12 col-sm-6 col-md-4">
                <div class="single-video-post">
                    <img src="img/bg-img/video1.jpg" alt="">
                    <!-- Video Button -->
                    <div class="videobtn">
                        <a href="https://www.youtube.com/watch?v=5BQr-j3BBzU" class="videoPlayer"><i class="fa fa-play" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>

            <!-- Single Video Post -->
            <div class="col-12 col-sm-6 col-md-4">
                <div class="single-video-post">
                    <img src="img/bg-img/video2.jpg" alt="">
                    <!-- Video Button -->
                    <div class="videobtn">
                        <a href="https://www.youtube.com/watch?v=5BQr-j3BBzU" class="videoPlayer"><i class="fa fa-play" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>

            <!-- Single Video Post -->
            <div class="col-12 col-sm-6 col-md-4">
                <div class="single-video-post">
                    <img src="img/bg-img/video3.jpg" alt="">
                    <!-- Video Button -->
                    <div class="videobtn">
                        <a href="https://www.youtube.com/watch?v=5BQr-j3BBzU" class="videoPlayer"><i class="fa fa-play" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ##### Video Post Area End ##### -->
<!-- ##### Editorial Post Area Start ##### -->
<div class="editors-pick-post-area section-padding-80-50">
    <div class="container">
        <div class="row">
            <!-- World News -->
            <div class="col-12 col-md-7 col-lg-9">
                <div class="section-heading">
                    <h6>World news</h6>
                </div>

                <div class="row">

                    @foreach (var item in Model.LatestWorldNews)
                    {
                        <!-- Single Post -->
                        <div class="col-12 col-lg-4">
                            <div class="single-blog-post">
                                <div class="post-thumb">
                                    <a asp-area="" asp-controller="Articles" asp-action="Index" asp-route-id="@item.Id"><img src="@item.PictureImageUrl" alt=""></a>
                                </div>
                                <div class="post-data">
                                    <a asp-area="" asp-controller="Articles" asp-action="Index" asp-route-id="@item.Id" class="post-title">
                                        <h6>@item.Title</h6>
                                    </a>
                                    <div class="post-meta">
                                        <div class="post-date"><a asp-area="" asp-controller="Articles" asp-action="Index" asp-route-id="@item.Id">@item.CreatedOn.ToString("dddd, dd MMMM yyyy")</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Local News -->
            <div class="col-12 col-md-5 col-lg-3">
                

                <vc:get-local-last-five-articles></vc:get-local-last-five-articles>
            </div>
        </div>
    </div>
</div>
<!-- ##### Editorial Post Area End ##### -->