@model ENews.Web.ViewModels.Categories.MainCategoryArticlesViewModel

@{
    this.ViewData["Title"] = Model.Title;
}

<h1 class="text-center">@Model.Title</h1>
<br />
<!-- ##### Blog Area Start ##### -->
<div class="blog-area section-padding-0-80">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-8">
                <div class="blog-posts-area">
                    <!-- Single Featured Post -->
                    @foreach (var article in Model.CategoryArticles)
                    {
                        <div class="single-blog-post featured-post mb-30">
                            <div class="post-thumb">
                                <a asp-area="" asp-controller="Articles" asp-action="Index" asp-route-id="@article.Id"><img src="@article.PictureImageUrl" style='height: 100%; width: 100%; object-fit: contain' alt=""></a>


                            </div>
                            <div class="post-data">
                                <a asp-area="" asp-controller="Categories" asp-action="Index" asp-route-name="@article.CategoryTitle" class="post-catagory">@article.CategoryTitle</a>
                                <a asp-area="" asp-controller="Articles" asp-action="Index" asp-route-id="@article.Id" class="post-title">
                                    <h6>@article.Title</h6>
                                </a>
                                <div class="post-meta">
                                    <p class="post-author">
                                        By <a href="#">
                                            @if (article.AuthorFirstName == null)
                                            {
                                                @article.AuthorUserName
                                            }
                                            else
                                            {
                                                @article.AuthorFullName
                                            }
                                        </a>
                                    </p>
                                    <p class="post-excerp">@article.ContetPreview</p>
                                    <!-- Post Like & Post Comment -->
                                    <div class="d-flex align-items-center">
                                        <a asp-area="" asp-controller="Articles" asp-action="Index" asp-route-id="@article.Id" class="post-like"><i class="fa fa-eye text-muted fsize-3"></i> <span>@article.SeenCount</span></a>
                                        <a asp-area="" asp-controller="Articles" asp-action="Index" asp-route-id="@article.Id" class="post-comment"><img src="~/img/core-img/chat.png" alt=""> <span>@article.CommentsCount</span></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                @*ToDo
                    <li class="page-item"><a class="page-link" href="#">...</a></li>*@
                <nav aria-label="Page navigation example" class="center">
                    <ul class="pagination mt-50 justify-content-center">

                        @*Previous*@
                        @*@if (this.Model.CurrentPage == 1)
                            {
                                <li class="page-item disabled m-1 mr-4">
                                    <a class="page-link" href="#">Previous</a>
                                </li>
                            }*@

                        @*else
                            {
                                <li class="page-item m-1 mr-4">
                                    <a class="page-link"
                                       asp-route="category"
                                       asp-route-name="@this.Model.Title"
                                       asp-route-page="@(this.Model.CurrentPage - 1)">Previous</a>
                                </li>
                            }*@

                        @*First page*@
                        @if (this.Model.CurrentPage != 1)
                        {
                            <li class="page-item">
                                <a class="page-link"
                                   asp-route="category"
                                   asp-route-name="@this.Model.Title"
                                   asp-route-page="1">1</a>
                            </li>
                        }
                        @*Pages before current page*@
                        @for (int i = this.Model.CurrentPage - 2; i < this.Model.CurrentPage; i++)
                        {
                            @if (i > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link"
                                       asp-route="category"
                                       asp-route-name="@this.Model.Title"
                                       asp-route-page="@i">@i</a>
                                </li>
                            }
                        }
                        @*Current page*@
                        @{
                            <li class="page-item active">
                                <a class="page-link"
                                   asp-route="category"
                                   asp-route-name="@this.Model.Title"
                                   asp-route-page="@this.Model.CurrentPage">@this.Model.CurrentPage</a>
                            </li>
                        }
                        @*Pages after current page*@
                        @for (int i = this.Model.CurrentPage + 1; i <= this.Model.CurrentPage + 2; i++)
                        {
                            @if (i < this.Model.PagesCount)
                            {

                                <li class="page-item">
                                    <a class="page-link"
                                       asp-route="category"
                                       asp-route-name="@this.Model.Title"
                                       asp-route-page="@i">@i</a>
                                </li>
                            }
                        }
                        @*Last page*@
                        @if (this.Model.CurrentPage != this.Model.PagesCount)
                        {
                            <li class="page-item">
                                <a class="page-link"
                                   asp-route="category"
                                   asp-route-name="@this.Model.Title"
                                   asp-route-page="@(this.Model.PagesCount)">@this.Model.PagesCount</a>
                            </li>
                        }

                        @*Next page*@
                        @*@if (this.Model.CurrentPage == this.Model.PagesCount)
                            {
                                <li class="page-item disabled m-1">
                                    <a class="page-link" href="#">Next</a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item m-1">
                                    <a class="page-link"
                                       asp-route="category"
                                       asp-route-name="@this.Model.Title"
                                       asp-route-page="@(this.Model.CurrentPage + 1)">Next</a>
                                </li>
                            }*@
                    </ul>
                </nav>
            </div>
            <div class="col-12 col-lg-4">
                <div class="blog-sidebar-area">

                    <!-- Latest Posts Widget -->
                    <div class="latest-posts-widget mb-50">
                        <vc:lates-articles count="6" , skip="0"></vc:lates-articles>
                    </div>

                    <!-- Popular News Widget -->
                    <vc:most-commented-news count="4" skip="0"></vc:most-commented-news>

                    <!-- Latest Comments Widget -->
                    <vc:latest-comments></vc:latest-comments>
                </div>
            </div>
        </div>
    </div>
</div>
