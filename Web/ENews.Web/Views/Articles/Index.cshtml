@model ENews.Web.ViewModels.Articles.ArticleViewModel
@{
    this.ViewData["Title"] = Model.Title;
}

<div>
    <div class="container-fluid mt-100">
        <div class="row">
            <div class="col-md-12">
                <div class="mb-4">
                    <h1>
                        @Model.Title
                    </h1>
                </div>
                <div class="card mb-4">
                    <div class="card-header">
                        <div class="media flex-wrap w-100 align-items-center">
                            <img src="https://res.cloudinary.com/dxfq3iotg/image/upload/v1574583246/AAA/2.jpg" class="d-block ui-w-40 rounded-circle" alt="">
                            <div class="media-body ml-3">
                                <a href="javascript:void(0)" data-abc="true">@Model.AuthorFullName</a>
                                <div class="text-muted small">@Model.CreatedOn</div>
                            </div>
                            <div class="text-muted small ml-3">
                                <div>Member since <strong>01/1/2019</strong></div>
                                <div><strong>134</strong> posts</div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="media-body col-12">
                            <img src="@Model.PictureImageUrl" style='height: 100%; width: 100%; object-fit: contain' />

                            @if (Model.GalleryId != null)
                            {
                                <div class="col-12">
                                    <h4 class="text-center">
                                        <a asp-area="" asp-controller="Gallery" asp-action="Preview" asp-route-id="@Model.GalleryId">
                                            Go to gallery
                                        </a>
                                    </h4>
                                </div>

                            }
                        </div>
                        <div class="text col-12">
                            @Html.Raw(Model.SanitizedContent)
                        </div>
                    </div>
                    <div class="card-footer d-flex flex-wrap justify-content-between align-items-center px-0 pt-0 pb-3">
                        <div class="px-4 pt-3">
                            <a href="javascript:void(0)" class="text-muted d-inline-flex align-items-center align-middle" data-abc="true">
                                <i class="fa fa-heart text-danger">
                                </i>&nbsp;
                                <span class="align-middle">
                                    445
                                </span>
                            </a>
                            <span class="text-muted d-inline-flex align-items-center align-middle ml-4">
                                <i class="fa fa-eye text-muted fsize-3">
                                </i>&nbsp;
                                <span class="align-middle">
                                    14532
                                </span>
                            </span>
                        </div>
                        <div class="px-4 pt-3"> <button type="button" class="btn btn-primary"><i class="ion ion-md-create"></i>&nbsp; Reply</button> </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

